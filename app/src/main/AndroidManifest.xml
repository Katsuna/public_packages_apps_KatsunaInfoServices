<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.katsuna.infoservices">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />



    <application
        android:name="com.katsuna.infoservices.KatsunaInfoServicesApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service android:name="com.katsuna.infoservices.ReportingService">
        </service>

        <receiver
            android:name="com.katsuna.infoservices.Alarms.StartReportingServerActivity"
            android:label="StartReportingServerActivity">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.katsuna.infoservices.Alarms.ReportingServerAlarm"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.katsuna.infoservices.MainActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

            </intent-filter>
            </activity>
    </application>

</manifest>